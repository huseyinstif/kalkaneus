{
  "name": "kalkaneus",
  "version": "1.0.0",
  "description": "Professional web security testing platform built with Electron and Node.js",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "preview": "vite preview",
    "test": "jest",
    "test:e2e": "playwright test"
  },
  "keywords": [
    "security",
    "pentesting",
    "proxy",
    "mitm",
    "kalkaneus",
    "web-security",
    "vulnerability-scanner",
    "electron"
  ],
  "author": "Kalkaneus Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "clsx": "^2.0.0",
    "crypto-js": "^4.2.0",
    "http-proxy": "^1.18.1",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.294.0",
    "monaco-editor": "^0.54.0",
    "node-forge": "^1.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.10.3",
    "vite-plugin-monaco-editor": "^1.1.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.kalkaneus.app",
    "productName": "Kalkaneus",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "scanner-templates/**/*",
      "src/images/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "scanner-templates/**/*"
    ],
    "extraResources": [
      {
        "from": "scanner-templates",
        "to": "scanner-templates",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Development"
    }
  }
}
